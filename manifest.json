{
    "manifest_version": 2,

    "name": "DMMapp Plugin",
    "description": "A plugin to find your digitized medieval manuscript repositories on the fly!",
    "version": "1.5.1",
    "author": "Giulio Menna, Marjolein de Vos",
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "browser_action": {
        "default_icon": "/images/icons/icon128.png",
        "default_popup": "popup.html",
        "default_title": "DMMapp Plugin"
    },
    "icons": { "16": "/images/icons/icon16.png",
           "48": "/images/icons/icon48.png",
          "128": "/images/icons/icon128.png" },
    "background": {
        "scripts": ["/js/options.js"],
        "persistent": false
    },
    "permissions": [
    "https://digitizedmedievalmanuscripts.org/app/"
  ]
}